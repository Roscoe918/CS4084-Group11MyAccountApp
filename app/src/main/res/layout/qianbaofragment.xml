<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff" >

        <ImageButton
            android:id="@+id/qianbaotouxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="#ffffff"
            android:src="@drawable/touxiang" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/myqianbao_logo"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myqianbao_yue"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:textColor="#000000"/>
        
        <TextView 
            android:id="@+id/zonghe_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:textColor="#2EB3E9"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#2EB3EA">
        
        <ImageView 
            android:id="@+id/xianjin_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/xianjin"/>
        <LinearLayout 
            android:id="@+id/xianjin_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/xianjin_icon"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true">
          <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/myqianbao_xianjin"
               android:textColor="#ffffff"
               android:textSize="16sp"/>
          <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/myqianbao_xianjinyue"
               android:textColor="#ffffff"
               android:textSize="12sp"/>
        </LinearLayout>
         <TextView 
            android:id="@+id/xianjin_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
            
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#539DDB">
        
        <ImageView
            android:id="@+id/chuxuka_icon" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/chuxuka"/>
        
        <LinearLayout 
            android:id="@+id/chuxuka_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/chuxuka_icon"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true">
          <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/myqianbao_chuxuka"
               android:textColor="#ffffff"
               android:textSize="16sp"/>
          <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/myqianbao_chuxukayue"
               android:textColor="#ffffff"
               android:textSize="12sp"/>
        </LinearLayout>
        
         <TextView 
             android:id="@+id/chuxuka_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
            
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#43BDB3">
        
        <ImageView 
            android:id="@+id/xinyongka_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/xinyongka"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        
        <LinearLayout 
            android:id="@+id/xinyongka_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/xinyongka_icon"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true">
          <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/myqianbao_xinyongka"
               android:textColor="#ffffff"
               android:textSize="16sp"/>
          <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/myqianbao_xinyongkayue"
               android:textColor="#ffffff"
               android:textSize="12sp"/>
        </LinearLayout>
        
       <TextView 
            android:id="@+id/xinyongka_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
            
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#F3BD5C">
        
        <ImageView 
            android:id="@+id/zhifubao_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/zhifubao"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        
        <LinearLayout 
            android:id="@+id/zhifubao_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/zhifubao_icon"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true">
          <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/myqianbao_zhifubao"
               android:textColor="#ffffff"
               android:textSize="16sp"/>
          <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/myqianbao_zhifubaoyue"
               android:textColor="#ffffff"
               android:textSize="12sp"/>
        </LinearLayout>
        
        <TextView 
            android:id="@+id/zhifubao_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
            
    </RelativeLayout>
    

</LinearLayout>
