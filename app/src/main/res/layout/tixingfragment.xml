<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#F5F5F5" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff">
        
        <ImageButton 
            android:id="@+id/tixingtouxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/touxiang"
            android:background="#ffffff"
            android:layout_marginLeft="5dp"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Reminder"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:textSize="20sp"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/tixing_xinyongka"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:clickable="true">
        
        <ImageView 
            android:id="@+id/xinyongkadaoqi_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/xinyongkatixing"/>
        
        <TextView 
            android:id="@+id/xinyongkadaoqi_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit Card Expires"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_toRightOf="@id/xinyongkadaoqi_icon"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        
         <TextView 
            android:id="@+id/xinyongkashezhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="Setting"
            android:textSize="15sp"
            android:textColor="#B3B3B3"/>
            
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/tixing_fangzu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:clickable="true">
        
        <ImageView
            android:id="@+id/fangzudaoqi_icon" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/fangzutixing"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent Expires"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/fangzudaoqi_icon"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        
         <TextView 
            android:id="@+id/fangzushezhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="Setting"
            android:textSize="15sp"
            android:textColor="#B3B3B3"/>
            
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/tixing_jizhang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:clickable="true">
        
        <ImageView 
            android:id="@+id/jizhangtixing_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/jizhangtixing"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accounting Reminder"
            android:layout_toRightOf="@id/jizhangtixing_icon"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        
       <TextView 
            android:id="@+id/jizhangshezhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="Setting"
            android:textSize="15sp"
            android:textColor="#B3B3B3"/>
            
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/tixing_huankuan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:clickable="true">
        
        <ImageView 
            android:id="@+id/naozhong_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/huankuantixing"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repayment Reminder"
            android:layout_toRightOf="@id/naozhong_icon"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        
         <TextView 
            android:id="@+id/naozhongshezhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="Setting"
            android:textSize="15sp"
            android:textColor="#B3B3B3"/>
                   
    </RelativeLayout>

</LinearLayout>
